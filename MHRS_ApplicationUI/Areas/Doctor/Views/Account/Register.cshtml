@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutAccountMHRS.cshtml";
}

@if (ViewBag.RegisterErrorMessage != null)
{
    <div>
        <h4 class="text-danger">@ViewBag.RegisterErrorMessage</h4>
    </div>
}
<div class="row">
    <div class="col-6">
        <h1 style="font-weight:bold">Doktor Üye Ol Ekranı</h1>
        <h3 style="color:darkgray">Tüm alanların doldurulması zorunldur.</h3>
        <form asp-area="Doctor" asp-controller="Account" asp-action="Register"
              method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group">
                <span class="text-danger" style="font-weight:bold;margin-right:3px">
                    *
                </span>
                <label asp-for="IdentificationNumber" class="control-label"></label>
                <input asp-for="IdentificationNumber" type="text" class="form-control" />
                <span asp-validation-for="IdentificationNumber"></span>
            </div>

            <div class="form-group">
                <span class="text-danger" style="font-weight:bold;margin-right:3px">
                    *
                </span>
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" type="text" class="form-control" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <span class="text-danger" style="font-weight:bold;margin-right:3px">
                    *
                </span>
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" type="text" class="form-control" />
                <span asp-validation-for="Surname"></span>
            </div>

            <div class="form-group">
                <span class="text-danger" style="font-weight:bold;margin-right:3px">
                    *
                </span>
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" type="text" class="form-control" />
                <span asp-validation-for="Email"></span>
            </div>

            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" type="date" class="form-control" />
            </div>


            <div class="form-group">
                <span class="text-danger" style="font-weight:bold;margin-right:3px">
                    *
                </span>
                <label asp-for="Gender" class="control-label"></label>
                <select name="Gender" class="form-control">
                    <option value="0">Belirtilmemiş</option>
                    <option value="1">Erkek</option>
                    <option value="2">Kadın</option>
                </select>
            </div>

            <div class="form-group">
                <span class="text-danger" style="font-weight:bold;margin-right:3px">
                    *
                </span>
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="KAYIT OL" class="btn btn-info btn-block" />
            </div>
        </form>
    </div>

    <div class="col-6">
        <img src="~/health-theme-assets/images/gallery-03.jpg"
             style="max-width:100%; height:auto; position:fixed" />

    </div>

</div>