@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ConfirmResetPassword";
    Layout = "~/Views/Shared/_LayoutMHRS.cshtml";
}

<h1>ConfirmResetPassword</h1>

<div class="row">
    <div class="col-6 offset-3 offset-3">
        <h4 style="font-weight:bold;">Yeni Şifrenizi oluşturabilirsiniz!</h4>
        <form asp-controller="Account" asp-action="ConfirmResetPassword" method="post">
            <div asp-validation-summary="All" class="text-danger">
            </div>

            <div class="form-group">
                <label asp-for="NewPassword" class="font-weight-bold"></label>
                <input type="password" asp-for="NewPassword"
                       class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="ConfirmNewPassword" class="font-weight-bold"></label>
                <input type="password" asp-for="ConfirmNewPassword"
                       class="form-control" />
            </div>

            <input type="hidden" value="@ViewBag.UserId"
                   name="UserId" />
            <input type="hidden" value="@ViewBag.Token"
                   name="Token" />

            <input type="submit" value="Yeni Şifremi Kaydet" class="btn btn-info btn-block" style="background-color:#46A3BE; " />
        </form>
    </div>
</div>

